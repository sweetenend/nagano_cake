<div class="container">
  <div class="row g-5">
    <div class="col-lg-8">
      <h4 calss="md-3">ジャンル一覧・追加</h4>
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <div class="row g-3">
          <div class="col-2"><p>ジャンル名</p></div>
          <div class="col-3"><%= f.text_field :name %></div>

          <div class="col-2"><%= f.submit "新規登録" %></div>
        <% end %>
        </div>
      <div class="row g-3">
        <table class="table">
          <thead>
            <tr class="col-1">
              <th>ジャンル</th>
              <th></th>
            </tr>
            
          </thead>

          <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <td class="col-1">
                  <%= genre.name %>
                </td>
                <td class="col-1">
                  <%= link_to "編集する", edit_admin_genre_path(genre.id), class: 'btn btn-success btn-block ' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>