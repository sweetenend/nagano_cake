<div class="container">
  <h4 class="md-3">商品詳細</h4>
  <div class="row g-5">
    <div class="col-lg-3">
      <div>
        <%= image_tag @item.image %>
      </div>
    </div>
    
    <div class="col-lg-9">
      <div class="row g-3">
        <div class="col-3">商品名</div>
        <div class="col-9"><%= @item.name %></div>
        
        <div class="col-3">商品説明</div>
        <div class="col-9"><%= @item.introduction %></div>
        
        <div class="col-3">ジャンル</div>
        <div class="col-9"><%= @item.genre.name %></div>
        
        <div class="col-3"> 税込み価格</br>(税抜き価格)</div>
        <div class="col-9"><%= @item.price %>(<%= @item.add_tax_price.to_s(:delimited) %>)円</div>
        
        <div class="col-3">販売ステータス</div>
        <div class="col-9">
          <% if @item.is_active %>
            販売中
          <% else %>
            販売停止
          <% end %>
        </div>
      </div>
    </div>
    <div>
      <%= link_to "編集する", edit_admin_item_path(@item.id) %>
    </div>
  </div>
</div>


