<div class="container">
  <div class="row g-5">
    <div class="col-lg-10">
      <h4 calss="mb-3 ">商品一覧</h4>
        <%= link_to new_admin_item_path, class: 'btn me-md-2' do %>
          <i class="fa-regular fa-plus"></i>
        <% end %>
      <table class="table ">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜き価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
  
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td>
                <%= link_to admin_item_path(item.id) do %>
                  <%= item.name %>
                <% end %>
              </td>
              <td><%= item.price %></td>
              <td><%= item.genre.name %></td>
              <td><%= item.is_active %></td>
            </tr>
          <% end %>
         </tbody>
      </table>
     </div>
  </div>
</div>