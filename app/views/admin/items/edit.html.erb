<div class="container">
  <div class="row g-5">
    <div class="col-lg-10">
      <h4 calss="md-3">商品編集</h4>
        <%= form_with model: @item, url: edit_admin_item_path do |f| %>
        <div class="row g-3">
        
          <div class="col-3">商品画像</div>
          <div class="col-9"><%= f.file_field :image, accept: "image/*" %></div>
        
          <div class="col-3">商品名</div>
          <div class="col-9"><%= f.text_field :name, class: "form-control" %></div>
          
          <div class="col-3"><label>商品説明</label></div>
          <div class="col-9"><%= f.text_area :introduction, class: "form-control" %></div>
          
          <div class="col-3"><label>ジャンル</label></div>
          <div class="col-9"><%= f.collection_select :genre_id, Genre.all, :id, :name, {prompt:"選択してください"} %></div>
        
          <div class="col-3"><label>税抜き価格</label></div>
          <div class="col-9"><%= f.text_field :price %>円</div>
        
        <div class="col-12">
          <%= f.radio_button :is_active, true %>販売中
          <%= f.radio_button :is_active, false %>販売停止
        </div>
        <div>
          <%= f.submit "変更を保存" %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>

