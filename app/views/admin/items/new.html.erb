<h1>商品新規登録</h1>
<%= form_with model: @item, url: admin_items_path do |f| %>
  <div>
    <label>商品画像</label>
    <%= f.file_field :image, accept: "image/*" %>
  </div>
  <div>
    <label>商品名</label>
    <%= f.text_field :name %>
  </div>
  <div>
    <label>商品説明</label>
    <%= f.text_area :introduction %>
  </div>
  <div>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, {prompt:"選択してください"} %>
  </div>
  <div>
    <label>税抜き価格</label>
    <%= f.text_field :price %>
  </div>
  <div>
    <%= f.radio_button :is_active, true %>販売中
    <%= f.radio_button :is_active, false %>販売停止
  </div>
  <%= f.submit "新規登録" %>
<% end %>
