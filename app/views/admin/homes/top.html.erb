<h1>注文履歴一覧</h1>

<table>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  
  <tbody>
    <%= @order_details.each do |order_detail| %>
      <tr>
        <td><%= order_detail.created_at %></td>
        <td><%= order_detail.order.name %></td>
        <td><%= order_detail.amount %></td>
        <td><%= order_detail.crafting_status %></td>
      </tr>
  </tbody>
</table>
