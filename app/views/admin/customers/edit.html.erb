<div class="container">
  <div class="row g-5">
    <div class="col">
      <h4>会員情報編集</h4>

      
        <%=form_with model: @customer, url: edit_admin_customer_path do |f| %>
          <div class="row mb-3">
            <label class="col-2 col-form-label">氏名</label>
            <div class="col-10">
              <%= f.text_field :first_name %><%= f.text_field :last_name %>
            </div>
          </div>
    
          <div class="row mb-3">
            <label class="col-sm-2 col-form-label">フリガナ</label>
            <div class="col-sm-10">
              <%= f.text_field :first_name_kana %><%= f.text_field :last_name_kana %>
            </div>
          </div>
    
          <div class="row mb-3">
            <label class="col-sm-2 col-form-label">郵便番号</label>
            <div class="col-sm-10">
              <%= f.text_field :postal_code %>
            </div>
          </div>
    
          <div class="row mb-3">
            <label class="col-sm-2 col-form-label">住所</label>
            <div class="col-sm-10">
              <%= f.text_field :address %>
            </div>
          </div>
    
          <div class="row mb-3">
            <label class="col-sm-2 col-form-label">電話番号</label>
            <div class="col-sm-10">
              <%= f.text_field :telephone_number %>
            </div>
          </div>
    
          <div class="row mb-3">
            <label class="col-sm-2 col-form-label">メールアドレス</label>
            <div class="col-sm-10">
              <%= f.text_field :email %>
            </div>
          </div>
    
          <div class="row mb-3">
            <label class="col-sm-2 col-form-label">会員ステータス</label>
            <div class="col-sm-10">
              <%= f.radio_button :is_deleted, true %>有効
              <%= f.radio_button :is_deleted, false %>退会
            </div>
          </div>
    
          <%= f.submit "変更を保存" %>
        <% end %>
        
      </div>
     </div>
  </div>
</div>
