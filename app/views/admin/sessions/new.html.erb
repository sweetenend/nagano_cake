<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-xl-3">
      <h4 class="mt-3 bg-gray-300 text-center">管理者ログイン</h4>
    </div>
  </div>
  
  
  
    
  <div class="row">
    <div class=" col-xl-6 px-5 px-sm-0 mx-auto">
      <%= form_with model: @admin, url: admin_session_path do |f| %>
      <div class="field mt-3">
        <span>メールアドレス　　</span>
         <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field mt-3">
        <span>パスワード　　　　</span>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
    </div>
    </div>
    <div class="row">
    <div class=" col-xl-2 px-5 px-sm-0 mx-auto mt-3">
      <div class="actions ">
        <%= f.submit "ログイン", class: 'bg-blue-500' %>
      </div>
    </div>
  </div>
      <% end %>


    
  
</div>
<%= render "admin/shared/links" %>