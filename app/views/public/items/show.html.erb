<div>
  <%= image_tag @item.image %>
  <div>
    <p><%= @item.name %></p>
    <p><%= @item.introduction %></p>
    <p>￥<%= @item.add_tax_price.to_s(:delimited) %>(税込み)</p>
  </div>
  
  <div>
    <% form_with model: @cart_item, url: cart_item_path do |f| %>
      <%= f.hidden_field :item_id, :value => @item.id %>
      <%= f.select :amount, *[1..3] %>
      <%= f.submit "カートに入れる" %>
    <% end %>
  </div>
</div>