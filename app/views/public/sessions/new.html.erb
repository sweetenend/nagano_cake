<h4>ログイン</h4>
<h4>会員の方はこちらからログイン</h4>
<%= form_with model: @admin, url: admin_session_path do |f| %>
  <div>
    <label>メールアドレス</label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div>
    <label>パスワード</label>
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>
  
  <%= f.submit "ログイン", class: 'bg-blue-500' %>
<% end %>

<h4>会員登録がお済でない方</h4>
<p>
  <%= link_to "こちら", new_customer_registration_path %> から新規登録を行ってください
</p>
<%= render "public/shared/links" %>
