<div class="container">
  <div class="row g-5">
    <div class="col-3">
      <h4>マイページ</h4>
    </div>
  </div>
  
  <div class="row">
    <div class="col-2">
      <strong>登録情報</strong>
    </div>
    <div class="col-2">
      <%= link_to "編集する", customers_information_edit_path(@customer.id), class: 'btn  btn-success' %>
    </div>
  </div>

  <div class="row mb-5">
    <div class="col">
       <div class="row mb-3">
        <span class="col-sm-2">氏名</span>
        <div class="col-sm-10">
          <%= @customer.first_name %><%= @customer.last_name %>
        </div>
      </div>
  
      <div class="row mb-3">
        <span class="col-sm-2">フリガナ</span>
        <div class="col-sm-10">
          <%= @customer.first_name_kana %><%= @customer.last_name_kana %>
        </div>
      </div>
      
      <div class="row mb-3">
        <span class="col-sm-2">郵便番号</span>
        <div class="col-sm-10">
          <%= @customer.postal_code %>
        </div>
      </div>
  
      <div class="row mb-3">
        <span class="col-sm-2">住所</span>
        <div class="col-sm-10">
          <%= @customer.address %>
        </div>
      </div>
  
      <div class="row mb-3">
        <span class="col-sm-2">電話番号</span>
        <div class="col-sm-10">
          <%= @customer.telephone_number %>
        </div>
      </div>
  
      <div class="row mb-3">
        <span class="col-sm-2">メールアドレス</span>
        <div class="col-sm-10">
          <%= @customer.email %>
        </div>
      </div>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-2">
      <strong>配送先</strong>
    </div>
    <div class="col-2">
      <%= link_to "一覧を見る", addresses_path, class: 'btn  btn-primary' %>
    </div>
  </div>

  <div class="row">
    <div class="col-2">
      <strong>注文履歴</strong>
    </div>
    <div class="col-2">
      <%= link_to "一覧を見る", orders_path, class: 'btn  btn-primary' %>
    </div>
  </div>
</div>
</div>