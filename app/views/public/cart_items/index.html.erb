<div>
  <h4>ショッピングカート</h4>
  <%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete %>
</div>

<div>
  <table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込み)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
    
    <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= cart_item.item.image %><%= cart_item.item.name %></td>
          <td><%= cart_item.item.add_tax_price %></td>
          <td><%= cart_item.amount %></td>
          <td><%= cart_item.subtotal %></td>
          <td><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete %></td>
          <% @合計金額 +=  (cart_item.item.price * 1.1).floor * cart_item.amount %>
        </tr>
        <%= link_to "買い物を続ける", items_path %>
      <% end %>
    </tbody>
  </table>
  
  <%= link_to "情報入力に進む", orders_new_path %>
</div>

